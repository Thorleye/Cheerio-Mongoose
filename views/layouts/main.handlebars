	$(document).on("click", "#deleteBtn", function(){
		const thisId= ($(this).parent().attr("data-id"));
		console.log(thisId)
		$.ajax({
			method: "DELETE",
			url: "/articles/" + thisId
		}).then(function(){
			location.reload();
		});
	});

	$(document).on("click", "#saveBtn", function(){
		const thisId= ($(this).attr("data-id"));
		console.log("thisID: "+ thisId)
		$.ajax({
			method: "PUT",
			url: "/articles/" + thisId
		}).then(function(){
			location.reload();
		});
	})
})
